<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rendangActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="@dimen/activity_margin_vertical"
        android:layout_marginTop="@dimen/activity_margin_horizontal"
        android:layout_marginLeft="@dimen/activity_margin_horizontal"
        android:layout_marginRight="@dimen/activity_margin_horizontal"
        android:src="@drawable/lumpia"
        android:id="@+id/img_lumpia"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lumpia"
        android:layout_toRightOf="@id/img_lumpia"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:id="@+id/tv_lumpia"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semarang"
        android:layout_below="@id/tv_lumpia"
        android:layout_toRightOf="@id/img_lumpia"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_lumpia"
        android:layout_marginLeft="@dimen/activity_margin_horizontal"
        android:text="@string/content_lumpia"
        android:layout_marginRight="@dimen/activity_margin_horizontal"
        />

</RelativeLayout>